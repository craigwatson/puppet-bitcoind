# From: https://bitcointalk.org/index.php?topic=25518.0

description "bitcoind"

start on filesystem
stop on runlevel [!2345]
oom never
expect daemon
respawn
respawn limit 10 60 # 10 times in 60 seconds

script
user=<%= scope.lookupvar('bitcoind::user_name') %>
home=<%= scope.lookupvar('bitcoind::user_home') %>
cmd=<%= scope.lookupvar('bitcoind::bitcoind_cmd') %>
pidfile=<%= scope.lookupvar('bitcoind::bitcoind_pidfile') %>

# Don't change anything below here unless you know what you're doing
[[ -e $pidfile && ! -d "/proc/$(cat $pidfile)" ]] && rm $pidfile
[[ -e $pidfile && "$(cat /proc/$(cat $pidfile)/cmdline)" != $cmd* ]] && rm $pidfile
exec start-stop-daemon --start -c $user --chdir $home --pidfile $pidfile --startas $cmd -b -m
end script
